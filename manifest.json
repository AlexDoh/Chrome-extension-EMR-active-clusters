{
  "name": "EMR Bay",
  "description": "Get list of active EMR clusters and replace EMR domain",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs",
    "webRequest",
    "https://*.console.aws.amazon.com/elasticmapreduce/*",
    "http://*.console.aws.amazon.com/elasticmapreduce/*",
    "http://*.compute.internal:*/*",
    "webRequestBlocking",
    "cookies"
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "icon_16.png",
    "default_popup": "index.html"
  }
}
